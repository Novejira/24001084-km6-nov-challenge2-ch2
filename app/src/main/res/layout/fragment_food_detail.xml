<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    tools:context=".presentation.fooddetail.FoodDetailFragment">


    <ImageView
    android:id="@+id/iv_food_photo"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    android:scaleType="centerCrop"
    tools:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:textSize="40sp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_food_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="boba" />

    <TextView
        android:id="@+id/tv_food_price"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:textSize="40sp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_food_photo"
        app:layout_constraintTop_toBottomOf="@id/tv_food_name"
        tools:text="Rp 10.000" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_food_photo"
        tools:text="desc food" />

    <ImageView
        android:id="@+id/ic_food_loca"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        />

    <TextView
        android:id="@+id/tv_food_loca"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:textSize="20sp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_food_loca"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        tools:text="locatian" />





</androidx.constraintlayout.widget.ConstraintLayout>